<h3>Contact</h3>
<form method="POST">
  <div class="form-group">
    <label>Name</label>
    <input type="text" value="{{contact.name}}" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label>Phone Number</label>
    <input type="text" value="{{contact.phone}}" name="phone" class="form-control">
  </div>
  <div class="form-group">
    <label>Email Address</label>
    <input type="text" value="{{contact.email}}" name="email" class="form-control">
  </div>
  <div class="form-group">
    <button class="btn btn-success">Save contact</button>
    <a class="btn btn-danger" href="/contacts">Delete contact</a>
    <a class="btn btn-default" href="/contacts">Cancel</a>
  </div>
</form>
