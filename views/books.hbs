<h1>ALL TEXTBOOKS AVAILABLE</h1>

<table class="table table-hover">
  <thead>
    <td><b>Title</b></td>
    <td><b>Author</b></td>
    <td><b>Department</b></td>
    <td><b>Price</b></td>
    <td><b>Owner</b></td>
  </thead>
  <tbody>
{{#each books}}
  <tr>
    <td>{{title}}</td>
    <td>{{author}}</td>
    <td>{{department}}</td>
    <td>${{price}}</td>
    <td>{{email}}</td>
  </tr>
{{/each}}
  </tbody>
</table>

<a href="/" class="btn btn-primary">Home</a>
<a href="/profile" class="btn btn-primary">Your Books</a>
<a href="/logout" class="btn btn-primary">Logout</a>
